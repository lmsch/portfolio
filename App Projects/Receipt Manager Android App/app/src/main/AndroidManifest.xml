<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hfad.appgodsproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_shark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_shark"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.AddReceiptOuterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity android:name=".activities.ReceiptDetailActivity"
                  android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>

    </application>

</manifest>